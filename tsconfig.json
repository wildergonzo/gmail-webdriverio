{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "*": [ "./*" ],
            "src/*": ["./src/*"],
            "test/*": ["./test/*"]
        },
        "types": ["node", "@wdio/sync", "mocha", "chai"]
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ],
    "compileOnSave": false
}